<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>MoviePalz Video Page</title>
        <style>
            body {
                margin: 0;
                font-family: Arial, sans-serif;
                background-color: #000;
                color: white;
            }
            .video-container {
                display: flex;
                padding: 20px;
            }
            .video-player {
                flex-grow: 1;
                position: relative;
            }
            .video-player video {
                width: 100%;
                height: auto;
            }
            .video-controls {
                position: absolute;
                bottom: 10px;
                left: 10px;
                right: 10px;
                display: flex;
                align-items: center;
                background-color: rgba(0, 0, 0, 0.5);
                padding: 10px;
                border-radius: 5px;
            }
            .video-controls button {
                background-color: transparent;
                border: none;
                color: white;
                margin-right: 10px;
                cursor: pointer;
                font-size: 18px;
            }
            .video-controls .progress {
                flex-grow: 1;
                height: 5px;
                background-color: #333;
                margin: 0 10px;
                position: relative;
                cursor: pointer;
            }
            .video-controls .progress-bar {
                height: 100%;
                background-color: #daa520;
                width: 0;
            }
            .video-controls .volume-control {
                display: flex;
                align-items: center;
            }
            .video-controls .volume-slider {
                width: 60px;
                margin-left: 10px;
            }
            .suggested-movies {
                width: 33%;
                padding-left: 20px;
            }
            .suggested-movies h3 {
                color: #daa520;
            }
            .suggested-movies .movie {
                display: flex;
                align-items: center;
                margin-bottom: 10px;
            }
            .suggested-movies .movie img {
                width: 50px;
                height: 75px;
                margin-right: 10px;
            }
            .suggested-movies a {
                text-decoration: none;
            }

            .movie-details {
                display: flex;
                padding: 0px 20px;
            }

            .comments-section {
                padding: 20px;
            }
            .comments-section h3 {
                margin-bottom: 10px;
            }
            .comments-section input {
                width: 100%;
                padding: 10px;
                border-radius: 10px;
                border: none;
                margin-bottom: 10px;
            }
            .comment {
                display: flex;
                align-items: flex-start;
                margin-bottom: 10px;
            }
            .comment img {
                width: 50px;
                height: 50px;
                border-radius: 50%;
                margin-right: 10px;
            }
            .comment .comment-text {
                background-color: #333;
                padding: 10px;
                border-radius: 10px;
            }
        </style>
    </head>
    <body>
        <%- include('partials/navBar') %>
        <div class="video-container">
            <div class="video-player">
                <video id="movieVideo">
                    <source src="assets/video_test.mp4" type="video/mp4" />
                    Your browser does not support the video tag.
                </video>
                <div class="video-controls">
                    <button id="playPauseBtn">&#9654;</button>
                    <div class="progress">
                        <div class="progress-bar"></div>
                    </div>
                    <div class="volume-control">
                        <button id="muteBtn">&#128266;</button>
                        <input
                            type="range"
                            class="volume-slider"
                            min="0"
                            max="1"
                            step="0.1"
                            value="1"
                        />
                    </div>
                </div>
            </div>
            
            <div class="suggested-movies">
                <h3>Suggested Movies</h3>
                <% relatedMovies.forEach((movie) => { %>
                    <a href="/video?movieId=<%= movie.id %>">
                        <div class="movie">
                            <img src="https://image.tmdb.org/t/p/w500<%= movie.posterPath %>" alt="<%= movie.title %>">
                            <div>
                                <p><%= movie.title %></p>
                            </div>
                        </div>
                    </a>
                <% })%>
            </div>
        </div>
        <div class="movie-details">
            <div class="movie-title">
                <h2><%= movie.title %></h2>
            </div>
            <div class="movie-description">
                <% if(movie.description == '') { %>
                    <p>There is currently no descripton</p>
                <% } else { %>
                    <p><%= movie.description %></p>
                <% } %>
            </div>
        </div>

        <div class="comments-section">
            <h3>Comments</h3>
            <input type="text" placeholder="Share your thoughts!" />
            <div class="comment">
                <img src="/api/placeholder/50/50" alt="User" />
                <div class="comment-text">
                    <p><strong>shawn99</strong></p>
                    <p>
                        Best movie ever! Plot is interesting and had many
                        unexpected twists!
                    </p>
                </div>
            </div>
        </div>

        <script src="videoControls.js"></script>
    </body>
</html>
